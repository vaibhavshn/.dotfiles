{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "keybinds": {},
  "theme": "github",
  "permission": {
    "external_directory": {
      "*": "ask",
      "~/.config/opencode/**": "allow",
      "~/.dotfiles/**": "allow",
      "~/dev/**": "allow",
      "~/work/**": "allow"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.envrc": "deny",
      "secrets/*": "deny",
      ".dev.vars": "ask"
    },
    "bash": {
      "*": "ask",
      "ast-grep*": "allow",
      "awk*": "allow",
      "biome*": "allow",
      "bun*": "allow",
      "cargo*": "allow",
      "cat*": "allow",
      "cloc*": "allow",
      "cp*": "allow",
      "date*": "allow",
      "diff*": "allow",
      "doggo*": "allow",
      "dot*": "allow",
      "fd*": "allow",
      "find*": "allow",
      "fnm*": "allow",
      "fzf*": "allow",
      "git*": "allow",
      "git push*": "ask",
      "git push": "ask",
      "go*": "allow",
      "grep*": "allow",
      "gsed*": "allow",
      "head*": "allow",
      "jq*": "allow",
      "ls*": "allow",
      "mkdir*": "allow",
      "npm*": "allow",
      "pnpm*": "allow",
      "prettier*": "allow",
      "pwd": "allow",
      "rg*": "allow",
      "sed*": "allow",
      "sg*": "allow",
      "shellcheck*": "allow",
      "sort*": "allow",
      "stow*": "allow",
      "stylua*": "allow",
      "tail*": "allow",
      "tar*": "allow",
      "touch*": "allow",
      "tr*": "allow",
      "tree*": "allow",
      "tsc*": "allow",
      "turbo*": "allow",
      "uniq*": "allow",
      "unzip*": "allow",
      "vite*": "allow",
      "vitest*": "allow",
      "wc*": "allow",
      "which*": "allow",
      "xargs*": "allow",
      "yarn*": "allow",
      "z*": "allow",
      "zip*": "allow",
      "zoxide*": "allow"
    },
    "edit": "allow",
    "webfetch": "ask"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": false
    },
  }
}
