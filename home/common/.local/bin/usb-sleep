#!/usr/bin/env bash
set -euo pipefail

# ==============================================================================
# usb-sleep - Control USB power during macOS sleep
# ==============================================================================
# Toggles between normal sleep (USB powered) and deep sleep (USB off)
# Uses pmset hibernatemode setting:
#   - Mode 3:  Normal sleep, USB ports stay powered
#   - Mode 25: Deep sleep (hibernate), USB ports power off
# ==============================================================================

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Logging helpers
info() { echo -e "${BLUE}[INFO]${NC} $1"; }
success() { echo -e "${GREEN}[OK]${NC} $1"; }
warn() { echo -e "${YELLOW}[WARN]${NC} $1"; }
error() { echo -e "${RED}[ERROR]${NC} $1"; }

# ==============================================================================
# Helper Functions
# ==============================================================================

get_hibernate_mode() {
    pmset -g | grep hibernatemode | awk '{print $2}'
}

show_status() {
    local mode
    mode=$(get_hibernate_mode)
    
    echo ""
    echo "Current USB Sleep Settings"
    echo "=========================="
    
    case "$mode" in
        3)
            echo -e "Hibernate Mode: ${YELLOW}$mode${NC}"
            echo -e "USB Power:      ${YELLOW}ON during sleep${NC}"
            echo ""
            info "USB devices will remain powered when Mac sleeps"
            ;;
        25)
            echo -e "Hibernate Mode: ${GREEN}$mode${NC}"
            echo -e "USB Power:      ${GREEN}OFF during sleep${NC}"
            echo ""
            info "USB devices will lose power when Mac sleeps"
            warn "Wake from sleep will be slightly slower (~2-5 seconds)"
            ;;
        *)
            echo -e "Hibernate Mode: ${RED}$mode${NC} (custom)"
            echo ""
            warn "Non-standard hibernate mode detected"
            ;;
    esac
    echo ""
}

# ==============================================================================
# Command Functions
# ==============================================================================

cmd_enable() {
    info "Enabling USB power-off during sleep (hibernatemode 25)..."
    
    if ! sudo pmset -a hibernatemode 25; then
        error "Failed to set hibernate mode. Are you running as admin?"
        exit 1
    fi
    
    success "USB power will now be OFF during sleep"
    warn "Note: Wake from sleep will be slightly slower"
    echo ""
    show_status
}

cmd_disable() {
    info "Disabling USB power-off during sleep (hibernatemode 3)..."
    
    if ! sudo pmset -a hibernatemode 3; then
        error "Failed to set hibernate mode. Are you running as admin?"
        exit 1
    fi
    
    success "USB power will now stay ON during sleep"
    echo ""
    show_status
}

cmd_toggle() {
    local mode
    mode=$(get_hibernate_mode)
    
    if [[ "$mode" == "25" ]]; then
        cmd_disable
    else
        cmd_enable
    fi
}

cmd_help() {
    cat << 'EOF'
usb-sleep - Control USB power during macOS sleep

USAGE:
    usb-sleep <command>

COMMANDS:
    status      Show current USB power settings during sleep
    enable      Enable USB power-off during sleep (hibernatemode 25)
    disable     Disable USB power-off, keep USB powered (hibernatemode 3)
    toggle      Toggle between enabled and disabled
    help        Show this help message

DESCRIPTION:
    By default, macOS keeps USB ports powered during sleep mode. This can
    drain battery if USB devices are connected (like docking stations or
    mice with LEDs).

    Enabling USB power-off puts the Mac into deep sleep (hibernate mode),
    which cuts power to USB ports. The tradeoff is that waking from sleep
    takes a few seconds longer.

EXAMPLES:
    usb-sleep status    # Check current setting
    usb-sleep enable    # Turn off USB power during sleep
    usb-sleep disable   # Keep USB powered during sleep
    usb-sleep toggle    # Switch between modes

NOTE:
    Requires sudo privileges to modify power management settings.
EOF
}

# ==============================================================================
# Main
# ==============================================================================

main() {
    local cmd="${1:-status}"
    
    case "$cmd" in
        status)
            show_status
            ;;
        enable|on)
            cmd_enable
            ;;
        disable|off)
            cmd_disable
            ;;
        toggle)
            cmd_toggle
            ;;
        help|--help|-h)
            cmd_help
            ;;
        *)
            error "Unknown command: $cmd"
            echo ""
            cmd_help
            exit 1
            ;;
    esac
}

main "$@"
